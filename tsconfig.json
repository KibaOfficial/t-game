{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "dist/",
    "rootDir": "src/",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts", "src/server.mts"],
  "exclude": ["node_modules"]
}